@model IEnumerable<UDBSite.Models.Consulta>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            Tipo de consulta
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @item.Fecha.ToString("dd/MM/yyyy HH:mm")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoConsulta.Nombre)
        </td>
        <td>
            @Html.ActionLink("Leer", "Details", new { id = item.Id }, new { @class = "btn btn-xs  btn-primary" })
        </td>
    </tr>
}

</table>
